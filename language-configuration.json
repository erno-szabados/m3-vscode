{
    "comments": {
        "blockComment": [ "(*", "*)" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        { "open": "(*", "close": "*)", "notIn": ["string"] },
        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["(*", "*)"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
		"increaseIndentPattern": "^\\s*(BEGIN|DO|ELSE|ELSIF|LOOP|OF|THEN|RECORD|REPEAT|TO)$",
		"decreaseIndentPattern": "^\\s*END(\\s*;|\\s*\\w+\\.)$"
	}
}