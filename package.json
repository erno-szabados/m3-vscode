{
    "name": "m2-vscode",
    "displayName": "Modula-2 Language",
    "description": "Provides syntax highlighting and snippets for Modula-2",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.31.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [{
            "id": "m2",
            "aliases": ["Modula-2", "modula-2", "m2lang", "m2"],
            "extensions": [".mod",".def"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "m2",
            "scopeName": "source.m2lang",
            "path": "./syntaxes/m2lang.tmLanguage.json"
        }],
        "snippets": [{
            "language": "m2",
            "scopeName": "source.m2lang",
            "path": "./snippets/m2lang.json"
        }]
    }
}